#:kivy 2.3.1
#:import MDFillRoundFlatButton kivymd.uix.button
#:import MDFillRoundFlatIconButton kivymd.uix.button
#:import MDFloatLayout kivymd.uix.floatlayout
#:import MDTextField kivymd.uix.textfield
#:import MDLabel kivymd.uix.label
#:import MDSeparator kivymd.uix.card.MDSeparator
#:import MDSpinner kivymd.uix.spinner.MDSpinner
#:import MDGridLayout kivymd.uix.gridlayout.MDGridLayout
#:import ScrollView kivy.uix.scrollview.ScrollView

<WelcomeScreen>:
    MDFloatLayout:
        MDLabel:
            id: welcome_label
            text: ""
            font_style: "H2"
            halign: "center"
            pos_hint: {"center_x": 0.5,  "center_y": 0.7}

        MDFillRoundFlatButton:
            text: _("Start")
            font_size: "32sp"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press: root.on_start_pressed(self)

<LiveViewScreen>:
    MDFloatLayout:
        LivePreview:
            id: live_preview
            size_hint: 1, 1
            overlay_path: app.app_config.images.preview_overlay

        MDLabel:
            id: countdown_label
            text: ""
            font_style: "H1"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            outline_color: 0, 0, 0, 1
            outline_width: dp(2)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            id: progress_label
            text: ""
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            outline_color: 0, 0, 0, 1
            outline_width: dp(1)
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.15}

        MDFillRoundFlatIconButton:
            id: capture_button
            text: _("Start Capture")
            font_size: "32sp"
            icon: "camera"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            on_press: root.start_sequence(self)

<PreviewScreen>:
    MDFloatLayout:
        MDLabel:
            text: _("preview_title")
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            halign: "center"
            size_hint_y: None
            height: dp(50)
            pos_hint: {"center_x": 0.5, "top": 0.98}

        ScrollView:
            size_hint: 0.9, 0.70
            pos_hint: {"center_x": 0.5, "top": 0.88}
            do_scroll_x: False
            do_scroll_y: True
            bar_width: dp(10)

            GridLayout:
                id: preview_grid
                cols: 2
                spacing: dp(10)
                padding: dp(10)
                size_hint_y: None
                height: self.minimum_height

        MDFillRoundFlatIconButton:
            text: _("preview_btn_discard")
            font_size: "24sp"
            icon: "delete"
            md_bg_color: 0.8, 0, 0, 1
            size_hint: None, None
            size: dp(220), dp(80)
            pos_hint: {"center_x": 0.3, "center_y": 0.08}
            on_press: root.on_discard_pressed()

        MDFillRoundFlatIconButton:
            text: _("preview_btn_continue")
            font_size: "24sp"
            icon: "check"
            size_hint: None, None
            size: dp(220), dp(80)
            pos_hint: {"center_x": 0.7, "center_y": 0.08}
            on_press: root.on_keep_pressed()

<ShareScreen>:
    MDFloatLayout:
        MDLabel:
            id: email_label
            text: ""
            font_style: "H5"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            halign: "center"
            valign: "bottom"
            size_hint: 0.9, None
            height: dp(80)
            pos_hint: {"center_x": 0.5, "center_y": 0.92}

        MDSeparator:
            size_hint_x: 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.86}
            opacity: 1 if root.show_email else 0

        MDSpinner:
            id: loading_spinner
            size_hint: None, None
            size: dp(60), dp(60)
            pos_hint: {"center_x": 0.5, "center_y": (0.25 if root.show_email else 0.6) if (root.show_cloud and not root.cloud_link) else 0.75}
            active: root.is_sending or (root.show_cloud and not root.cloud_link)
            opacity: 1 if (root.is_sending or (root.show_cloud and not root.cloud_link)) else 0

        MDTextField:
            id: email_input
            autofocus: True
            multiline: False
            validator: "email"
            font_size: "24sp"
            mode: "rectangle"
            size_hint: None, None
            width: dp(500)
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            icon_right: "email-outline"
            opacity: 1 if (root.ui_active and root.show_email) else 0
            disabled: not (root.ui_active and root.show_email)

        MDFillRoundFlatIconButton:
            id: share_finish
            text: _("share_btn_finish")
            font_size: "24sp"
            icon: "check-circle-outline"
            size_hint: None, None
            size: dp(240), dp(100)
            pos_hint: {"center_x": 0.3 if root.show_email else 0.5, "center_y": (0.6 if root.show_email else 0.25)}
            on_press: root.on_finish_pressed()
            opacity: 1 if root.ui_active else 0
            disabled: not root.ui_active

        MDFillRoundFlatIconButton:
            id: email_send
            text: _("share_btn_email_send")
            font_size: "24sp"
            icon: "send"
            size_hint: None, None
            size: dp(240), dp(100)
            pos_hint: {"center_x": 0.65, "center_y": 0.6}
            on_press: root.on_send_pressed(self)
            opacity: 1 if (root.ui_active and root.show_email) else 0
            disabled: not (root.ui_active and root.show_email)

        Image:
            id: qr_code
            texture: root.qr_code_texture
            size_hint: None, None
            size: dp(225), dp(225)
            pos_hint: {"center_x": 0.5, "center_y": (0.25 if root.show_email else 0.6)}
            opacity: 1 if root.show_cloud and root.qr_code_texture else 0
