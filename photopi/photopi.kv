#:kivy 2.3.1
#:import MDFillRoundFlatButton kivymd.uix.button
#:import MDFillRoundFlatIconButton kivymd.uix.button
#:import MDFloatLayout kivymd.uix.floatlayout
#:import MDTextField kivymd.uix.textfield
#:import MDLabel kivymd.uix.label
#:import MDSeparator kivymd.uix.card.MDSeparator
#:import MDSpinner kivymd.uix.spinner.MDSpinner

<WelcomeScreen>:
    MDFloatLayout:
        MDLabel:
            id: welcome_label
            text: ""
            font_style: "H2"
            halign: "center"
            pos_hint: {"center_x": 0.5,  "center_y": 0.7}

        MDFillRoundFlatButton:
            text: _("Start")
            font_size: "32sp"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press: root.on_start_pressed(self)

<LiveViewScreen>:
    MDFloatLayout:
        LivePreview:
            id: live_preview
            size_hint: 1, 1
            overlay_path: app.config_data['images']['preview_overlay']

        MDLabel:
            id: countdown_label
            text: ""
            font_style: "H1"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            outline_color: 0, 0, 0, 1
            outline_width: dp(2)
            halign: "center"
            valign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDLabel:
            id: progress_label
            text: ""
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            outline_color: 0, 0, 0, 1
            outline_width: dp(1)
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.15}

        MDFillRoundFlatIconButton:
            id: capture_button
            text: _("Start Capture")
            font_size: "32sp"
            icon: "camera"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            on_press: root.start_sequence(self)

<EmailScreen>:
    MDFloatLayout:
        MDLabel:
            id: email_label
            text: ""
            font_style: "H5"
            theme_text_color: "Custom"
            text_color: app.theme_cls.primary_color
            halign: "center"
            valign: "bottom"
            size_hint: 0.9, None
            height: dp(80)
            pos_hint: {"center_x": 0.5, "center_y": 0.92}

        MDSeparator:
            size_hint_x: 0.85
            pos_hint: {"center_x": 0.5, "center_y": 0.86}

        MDSpinner:
            id: loading_spinner
            size_hint: None, None
            size: dp(60), dp(60)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            active: root.is_sending
            opacity: 1 if root.is_sending else 0

        MDTextField:
            id: email_input
            autofocus: True
            multiline: False
            validator: "email"
            font_size: "24sp"
            mode: "rectangle"
            size_hint: None, None
            width: dp(500)
            pos_hint: {"center_x": 0.5, "center_y": 0.75}
            icon_right: "email-outline"
            opacity: 1 if root.ui_active else 0
            disabled: not root.ui_active

        MDFillRoundFlatIconButton:
            id: email_abort
            text: _("email_btn_abort")
            font_size: "24sp"
            icon: "close-circle-outline"
            size_hint: None, None
            size: dp(240), dp(100)
            pos_hint: {"center_x": 0.3, "center_y": 0.6}
            on_press: root.on_abort_pressed()
            opacity: 1 if root.ui_active else 0
            disabled: not root.ui_active

        MDFillRoundFlatIconButton:
            id: email_send
            text: _("email_btn_send")
            font_size: "24sp"
            icon: "send"
            size_hint: None, None
            size: dp(240), dp(100)
            pos_hint: {"center_x": 0.68, "center_y": 0.6}
            on_press: root.on_send_pressed(self)
            opacity: 1 if root.ui_active else 0
            disabled: not root.ui_active
