#:kivy 2.3.1
#:import LivePreview src.camera.live_preview

<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: "Welcome to PhotoPi"
            font_size: 36

        Button:
            text: "Start"
            font_size: 30
            size_hint: None, None
            size: 300, 100
            pos_hint: {"center_x": 0.5, "bottom": 0.1}
            background_normal: ''
            background_color: 0.2, 0.6, 1, 1
            bold: True
            padding: [5, 5]
            on_press: root.on_start_pressed(self)

<LiveViewScreen>:
    FloatLayout:
        LivePreview:
            id: live_preview
            size_hint: 1, 1
            overlay_path: app.images_config['preview_overlay']

        Label:
            id: countdown_label
            text: ""
            font_size: 50
            color: 1, 0, 0, 1
            size_hint: None, None
            size: 400, 100
            pos_hint: {"center": (0.5, 0.5)}

        Label:
            id: progress_label
            text: "Images: 0/{}".format(app.images_config["max_image_count"])
            font_size: 20
            color: 1, 0, 0, 1
            size_hint: None, None
            size: 200, 50
            pos_hint: {"x": 0.05, "y": 0.05}

        Button:
            id: capture_button
            text: "Start Capture"
            font_size: 30
            color: 1, 1, 1, 1
            size_hint: None, None
            size: 300, 100
            pos_hint: {"center_x": 0.5, "bottom": 0.1}
            background_normal: ''
            background_color: 0.2, 0.6, 1, 1
            bold: True
            padding: [5, 5]
            on_press: root.start_sequence(self)
