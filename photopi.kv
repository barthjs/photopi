#:kivy 2.3.1
#:import MDDialog kivymd.uix.dialog
#:import MDFillRoundFlatButton kivymd.uix.button
#:import MDFillRoundFlatIconButton kivymd.uix.button
#:import MDFloatLayout kivymd.uix.floatlayout
#:import MDFTextField kivymd.uix.textfield
#:import MDLabel kivymd.uix.label
#:import LivePreview src.camera.live_preview

<WelcomeScreen>:
    MDFloatLayout:
        padding: 20
        spacing: 20

        MDLabel:
            text: "Welcome to PhotoPi"
            font_style: "H2"
            theme_text_color: "Primary"
            halign: "center"
            pos_hint: {"center_x": 0.5,  "center_y": 0.7}

        MDFillRoundFlatButton:
            text: "Start"
            font_size: "32sp"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_press: root.on_start_pressed(self)

<LiveViewScreen>:
    MDFloatLayout:
        padding: 20
        spacing: 20

        LivePreview:
            id: live_preview
            size_hint: 1, 1
            overlay_path: app.images_config['preview_overlay']

        MDLabel:
            id: countdown_label
            text: ""
            font_style: "H2"
            theme_text_color: "Custom"
            text_color:  1, 0, 0, 1
            halign: "center"
            valign: "center"

        MDLabel:
            id: progress_label
            text: ""
            font_style: "H4"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.1}

        MDFillRoundFlatIconButton:
            id: capture_button
            text: "Start Capture"
            font_size: "32sp"
            icon: "camera"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            on_press: root.start_sequence(self)

<EmailScreen>:
    MDFloatLayout:
        padding: 20
        spacing: 20

        MDLabel:
            id: email_label
            text: "Enter your E-Mail"
            font_style: "H4"
            theme_text_color: "Primary"
            halign: "center"
            pos_hint: {"center_x": 0.5,  "center_y": 0.9}

        MDTextField:
            id: email_input
            autofocus: True
            multiline: False
            font_size: "24sp"
            mode: "rectangle"
            size_hint: None, None
            width: dp(500)
            pos_hint: {"center_x": 0.5, "center_y": 0.75}

        MDFillRoundFlatIconButton:
            id: email_send
            text: "Send"
            font_size: "24sp"
            icon: "send"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.6, "center_y": 0.55}
            on_press: root.on_send_pressed(self)

        MDFillRoundFlatIconButton:
            id: email_abort
            text: "Abort"
            font_size: "24sp"
            icon: "cancel"
            size_hint: None, None
            size: dp(300), dp(100)
            pos_hint: {"center_x": 0.4, "center_y": 0.55}
            on_press: root.on_abort_pressed()