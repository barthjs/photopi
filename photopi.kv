#:kivy 2.3.1

<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        Label:
            text: "Welcome to PhotoPi"
            font_size: 36

        Button:
            text: "Start"
            font_size: 24
            size_hint: 0.5, 0.3
            pos_hint: {"center_x": 0.5}
            on_press: app.root.current = 'live_view'

